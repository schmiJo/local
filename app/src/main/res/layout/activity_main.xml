<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cluster.local.MainActivity">


    <fragment
        android:id="@+id/fragment"
        android:name="com.cluster.local.Map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

   <com.cluster.local.SpinnerView.SpinnerView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/spinnerView"
       android:layout_gravity="center_horizontal|bottom"
       />

    <com.cluster.local.SpinnerView.SpinnerClose
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="19dp"
        android:visibility="invisible"
        android:background="@drawable/ic_close_dark_24dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/spinnerClose"/>

</FrameLayout>
